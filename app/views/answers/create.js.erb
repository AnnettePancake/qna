<% if @answer.valid? %>
  $('.answers').append(
    "<div id='answer_<%= @answer.id %>'>" +
      "<%= j render 'answers/answer', answer: @answer %>" +
    "</div>"
  );
  $('#answer_body').val('');
  $('#answer-errors').html('');
<% else %>
  $('.answer_form').html("<%= j render 'answers/form' %>")
<% end %>
