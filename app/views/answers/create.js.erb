<% if @answer.valid? %>
  $('.answers').append(
    "<div id='answer_<%= @answer.id %>'>" +
      "<%= j render 'answers/answer', answer: @answer, question: @question %>" +
    "</div>"
  );
  $('#answer_body').val('');
  $('#answer-errors').html('');
  $('.nested-fields').remove();
  $("#answers_count").html("<%= @question.answers.count %> Answers");
<% else %>
  $('.answer_form').html("<%= j render 'answers/form' %>")
<% end %>
